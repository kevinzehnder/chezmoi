// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "experimental.theme_overrides": {
    "editor.document_highlight.read_background": "#00000000",
    "editor.document_highlight.write_background": "#00000000",
    "editor.document_highlight.bracket_background": "#00000000",
  },
  "languages": {
    "Python": {
      "indent_guides": {
        "background_coloring": "indent_aware",
      },
    },
  },
  "current_line_highlight": "all",
  "rounded_selection": true,
  "icon_theme": {
    "mode": "system",
    "light": "Colored Zed Icons Theme Light",
    "dark": "Colored Zed Icons Theme Dark",
  },
  "lsp": {
    "gopls": {
      "initialization_options": {
        "buildFlags": ["-tags=integration"],
      },
    },
  },
  "title_bar": {
    "show_sign_in": false,
  },
  "git": {
    "inline_blame": {
      "enabled": false,
    },
  },
  "selection_highlight": false,
  "agent_buffer_font_size": 18.0,
  "buffer_line_height": "standard",
  "ui_font_family": "IosevkaTerm Nerd Font",
  "context_servers": {
    "sequential-thinking": {
      "enabled": true,
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"],
    },
    "serena": {
      "enabled": true,
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--enable-web-dashboard",
        "false",
      ],
    },
    "gopls": {
      "enabled": true,
      "command": "gopls",
      "args": ["mcp"],
      "env": {},
    },
    "mcp-server-context7": {
      "enabled": true,
      "settings": {
        "context7_api_key": "ctx7sk-353cf56e-822f-4403-92e1-14fd954f3f08",
      },
    },
  },
  "git_panel": {
    "dock": "right",
  },
  "vim_mode": true,
  "terminal": {
    "font_size": 16.0,
    "font_family": "IosevkaTerm Nerd Font",
    "blinking": "on",
    "max_scroll_history_lines": 100000,
  },
  "project_panel": {
    "hide_hidden": false,
    "auto_fold_dirs": false,
  },
  "base_keymap": "VSCode",
  "agent": {
    "favorite_models": [
      {
        "provider": "deepseek",
        "model": "deepseek-chat",
      },
    ],
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "deepseek",
      "model": "deepseek-chat",
    },
    "enabled": true,
    "button": true,
    "model_parameters": [],
  },
  "relative_line_numbers": "enabled",
  "sticky_scroll": {
    "enabled": true,
  },
  "vertical_scroll_margin": 15.0,
  "gutter": {
    "line_numbers": true,
  },
  "minimap": {
    "display_in": "all_editors",
    "show": "auto",
    "thumb": "always",
  },
  "buffer_font_family": "IosevkaTerm Nerd Font",
  "file_types": {
    "terraform-vars": ["*.tfvars"],
    "go-template": ["*.tmpl"],
    "properties": ["*.migration"],
  },
  "colorize_brackets": true,
  "show_whitespaces": "trailing",
  "show_edit_predictions": true,
  "indent_guides": {
    "enabled": true,
  },
  "wrap_guides": [100],
  "ui_font_size": 18.0,
  "buffer_font_size": 18.0,
  "theme": {
    "mode": "system",
    "light": "Solarized Light",
    "dark": "Tokyo Night Storm",
  },
  "diagnostics": {
    "inline": {
      "enabled": true,
      "max_severity": null,
    },
  },
}
